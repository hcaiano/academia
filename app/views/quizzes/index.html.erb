<div class="container">
<h1>Listing quizzes</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Question</th>
      <th>Answer 1</th>
      <th>Answer 2</th>
      <th>Answer 3</th>
      <th>Answer 4</th>
      <th>Correct</th>
      <th>Question 2</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quizzes.each do |quiz| %>
      <tr>
        <td><%= quiz.id %></td>
        <td><%= quiz.question %></td>
        <td><%= quiz.answer_1 %></td>
        <td><%= quiz.answer_2 %></td>
        <td><%= quiz.answer_3 %></td>
        <td><%= quiz.answer_4 %></td>
        <td><%= quiz.correct %></td>
        <td><%= quiz.question_2 %></td>
        <td><%= link_to 'Show', quiz %></td>
        <td><%= link_to 'Edit', edit_quiz_path(quiz) %></td>
        <td><%= link_to 'Destroy', quiz, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Quiz', new_quiz_path %>
</div>